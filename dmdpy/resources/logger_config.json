{
    "version" : 1,

    "disable_existing_loggers" : false,

    "formatters" : {
        "brief" : {
            "format" : "\t%(message)s",
            "class": "logging.Formatter"
        },
        "single_line" : {
            "format" : "%(asctime)-15s %(levelname)-8s %(message)s",
            "class": "logging.Formatter",
            "datefmt" : "%a, %d %b %Y %H:%M:%S"
        },
        "verbose" : {
            "class": "logging.Formatter",
            "datefmt": "%I:%M:%S",
            "format": "%(levelname)-8s; [%(process)d]; %(threadName)s; %(name)-15s; %(module)s:%(funcName)s;%(lineno)d: %(message)s"
        }
    },

    "loggers" : {
        "dmdpy.utilities" : {
            "handlers": [],
            "level" : "DEBUG"
        },
        "dmdpy.setupjob" : {
            "handlers": [],
            "level" : "DEBUG"
        },
        "__main__": {
            "handlers": ["console"],
            "level": "DEBUG"
        },
        "dmdpy" :{
            "handlers": ["console"],
            "level": "DEBUG"
        },
        "dmdpy.protein" : {
             "handlers": ["console"],
            "level": "INFO"
        }

    },
    "handlers" : {
        "console" : {
            "class" : "logging.StreamHandler",
            "level" : "DEBUG",
            "formatter" : "verbose",
            "stream" : "ext://sys.stdout"
        },
        "node_console": {
            "class" : "logging.StreamHandler",
            "formatter": "verbose",
            "level" : "DEBUG",
            "stream" : "ext://sys.stdout"
        }
    },
    "root" : {
        "handlers" : [],
        "level" : "INFO"
    }
}
